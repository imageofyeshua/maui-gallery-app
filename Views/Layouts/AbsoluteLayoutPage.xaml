<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGalleryApp.Views.Layouts.AbsoluteLayoutPage"
             Title="AbsoluteLayoutPage">

    <AbsoluteLayout>
        <Label AbsoluteLayout.LayoutBounds="150, 0, 100, 50" BackgroundColor="DarkMagenta" Text="Hello Daniel" />
        <Button AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.3, 0.3" Text="Click Me" AbsoluteLayout.LayoutFlags="All" />
        <BoxView AbsoluteLayout.LayoutBounds="150, 200" Color="Beige" WidthRequest="50" HeightRequest="50" />
        <BoxView AbsoluteLayout.LayoutBounds="175, 225" Color="Fuchsia" WidthRequest="50" HeightRequest="50" />
        <BoxView AbsoluteLayout.LayoutBounds="200, 250" Color="ForestGreen" WidthRequest="50" HeightRequest="50" />
        <BoxView AbsoluteLayout.LayoutBounds="225, 275" Color="OrangeRed" WidthRequest="50" HeightRequest="50" />
    </AbsoluteLayout>
</ContentPage>