<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiGalleryApp.Views.Components.Mains.ButtonPage"
             Title="ButtonPage">
    <VerticalStackLayout>
        <Label x:Name="LblLog" />
        <Button 
            Text="Click Me"
            CornerRadius="20"
            BackgroundColor="Wheat"
            BorderColor="Coral"
            BorderWidth="3"
            HorizontalOptions="Center"
            ImageSource="fruit.png"
            HeightRequest="50"
            ContentLayout="Right, 30"
            Pressed="Button_Pressed" 
            Released="Button_Released"
            Clicked="Button_Clicked"
            />
    </VerticalStackLayout>
</ContentPage>